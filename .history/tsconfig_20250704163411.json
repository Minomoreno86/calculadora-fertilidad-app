{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".", // <-- AÃ‘ADIDO: Base para las rutas.
    "paths": {
      // Mantenemos la coherencia con babel.config.js
      "@/*": ["./*"], 
      "@/components/*": ["./src/presentation/components/*"],
      "@/core/*": ["./src/core/*"],
      "@/data/*": ["./src/data/*"],
      "@/navigation/*": ["./src/navigation/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/config/*": ["./src/config/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}