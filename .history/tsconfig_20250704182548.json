{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "src",  // ✅ Corrección: apunta a la carpeta src
    "paths": {
      "@/*": ["*"],
      "@/components/*": ["presentation/components/*"],
      "@/core/*": ["core/*"],
      "@/data/*": ["data/*"],
      "@/navigation/*": ["navigation/*"],
      "@/utils/*": ["utils/*"],
      "@/config/*": ["config/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
